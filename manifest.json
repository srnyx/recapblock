{
  "manifest_version": 3,
  "version": "1.0.0",

  "name": "RecapBlock",
  "description": "Block movie/show recap videos on YouTube so that you don't spoil anything for yourself",
  "author": "contact@srnyx.com",

  "action": {
    "default_title": "RecapBlock",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "64": "icons/icon64.png",
      "80": "icons/icon80.png",
      "96": "icons/icon96.png",
      "112": "icons/icon112.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [{
    "matches": [ "*://*.youtube.com/*" ],
    "js": [ "content.js" ]
  }]
}
